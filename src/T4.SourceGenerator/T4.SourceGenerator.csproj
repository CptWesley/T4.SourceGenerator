<Project Sdk="Microsoft.NET.Sdk">
  <Import Project="../package.props" />

  <PropertyGroup Label="Technical">
    <EnforceExtendedAnalyzerRules>true</EnforceExtendedAnalyzerRules>
    <DevelopmentDependency>true</DevelopmentDependency>
    <IncludeBuildOutput>false</IncludeBuildOutput>
  </PropertyGroup>

  <PropertyGroup Label="PackageInfo">
    <Description>Roslyn code generator based for T4 templates.</Description>
    <PackageTags>t4; t4 template; template; templating; templates; source code generator; generator; source generator; boilerplate; boiler plate</PackageTags>
    <Version>1.3.0-preview14</Version>
    <PackageReleaseNotes>
      ### v1.3.0
      - Fix issues related to building from CLI.
      ### v1.2.0
      - Improve template compile error reporting.
      - Turn generator into incremental generator.
      ### v1.1.0
      - Update Mono.TextTemplating to 3.0.0 preview for C#11 support.
      - Fix issue with unclear crashes.
      ### v1.0.0
      - Initial version
    </PackageReleaseNotes>
  </PropertyGroup>

  <ItemGroup Label="Documentation">
    <AdditionalFiles Include="AnalyzerReleases.Shipped.md" />
    <AdditionalFiles Include="AnalyzerReleases.Unshipped.md" />
  </ItemGroup>

  <ItemGroup Label="CompileTimeDependencies">
    <PackageReference Include="Microsoft.CodeAnalysis.CSharp" Version="4.7.0" PrivateAssets="all" />
  </ItemGroup>

  <ItemGroup Label="RuntimeDependencies">
    <PackageReference Include="Mono.TextTemplating" Version="3.0.0-preview-0052-g5d0f76c785" PrivateAssets="all" GeneratePathProperty="true" />
    <PackageReference Include="Mono.TextTemplating.Roslyn" Version="3.0.0-preview-0052-g5d0f76c785" PrivateAssets="all" GeneratePathProperty="true" />
    <PackageReference Include="System.CodeDom" Version="6.0.0" PrivateAssets="all" GeneratePathProperty="true" />
  </ItemGroup>

  <ItemGroup Label="Packaging">
    <None Include="$(OutputPath)\$(AssemblyName).dll" Pack="true" PackagePath="analyzers/dotnet/cs" Visible="false" />
    <None Include="$(PkgMono_TextTemplating)\lib\netstandard2.0\*.dll" Pack="true" PackagePath="analyzers/dotnet/cs" Visible="false" />
    <None Include="$(PkgMono_TextTemplating_Roslyn)\lib\netstandard2.0\*.dll" Pack="true" PackagePath="analyzers/dotnet/cs" Visible="false" />
    <None Include="$(PkgSystem_CodeDom)\lib\netstandard2.0\*.dll" Pack="true" PackagePath="analyzers/dotnet/cs" Visible="false" />
  </ItemGroup>

  <ItemGroup Label="DependencyPackaging">
    <EmbeddedResource Include="$(PkgMono_TextTemplating)\lib\netstandard2.0\*.dll" Visible="false" />
    <EmbeddedResource Include="$(PkgMono_TextTemplating_Roslyn)\lib\netstandard2.0\*.dll" Visible="false" />
    <EmbeddedResource Include="$(PkgSystem_CodeDom)\lib\netstandard2.0\*.dll" Visible="false" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Update="DotNetProjectFile.Analyzers" Version="1.4.1" />
    <PackageReference Update="Microsoft.CodeAnalysis.Analyzers" Version="3.11.0-beta1.24324.1" />
    <PackageReference Update="PolySharp" Version="1.14.1" />
    <PackageReference Update="Qowaiv.Analyzers.CSharp" Version="2.0.2" />
    <PackageReference Update="SonarAnalyzer.CSharp" Version="9.32.0.97167" />
    <PackageReference Update="StyleCop.Analyzers" Version="1.2.0-beta.556" />
  </ItemGroup>
</Project>